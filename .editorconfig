# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_style = space
indent_size = 4

[*.{ahk,generated.ahk,lib.ahk}]
indent_style = space
indent_size = 4

[justfile]
indent_style = space
indent_size = 4

[*.toml]
indent_style = space
indent_size = 4
